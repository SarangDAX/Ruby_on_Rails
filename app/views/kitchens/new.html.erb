<h1> ADD NEW ITEM TO THE KITCHEN : </h1>

<% if @item.errors.any? %> 
  <h2>The following errors prevented the items from being saved</h2> 
  <ul> 
    <% @item.errors.full_messages.each do |msg| %> 
      <li><%= msg %></li> 
    <% end %> 
  </ul>
<% end %>

<%= form_with scope: :kitchen, url: kitchens_path, local: true, data: { turbo: false } do |f| %>

    <p>
        <%= f.label :Item %><br>
        <%= f.text_field :item_name %>
    </p>

    <p>
        <%= f.label :Description %><br>
        <%= f.text_area :item_desc %>
    </p>

    <p>
        <%= f.submit %> 
    </p>

<% end %>